#!/usr/bin/haserl 

<%  echo -en "content-type: text/html\r\n\r\n"  # RF2616 Compliance %>

<%	
	if [ ! -f /tmp/opkglist.html ]; then 
		echo "<pre>" > /tmp/opkglist.html
		echo "Package data is not loaded. Click on Reload to download package data." >> /tmp/opkglist.html
		echo "</pre>" >> /tmp/opkglist.html
	fi
	if [ ! -f /tmp/opkglist-installed.html ]; then	
		echo "<pre>" > /tmp/opkglist-installed.html
		opkg list_installed >> /tmp/opkglist-installed.html
		echo "</pre>" >> /tmp/opkglist-installed.html
	fi

	# Clear Install info
 	echo "<pre>" > /tmp/install-info.html
	echo "</pre>" >> /tmp/install-info.html

	# Update the Installed list
	if [ ! -f /tmp/opkglist-installed.html ]; then 
		echo "<pre>" > /tmp/opkglist-installed.html
		opkg list_installed >> /tmp/opkglist-installed.html
		echo "</pre>" >> /tmp/opkglist-installed.html
	fi


	package_info=$(opkg list_installed|grep  -e haserl-ui -e dragino_gw_fwd -e lg02_pkt_fwd -e lora-gateway)
	if [ ! -z "$package_info" ]; then
		echo "<pre>" > /tmp/main_packages.html
		opkg list_installed|grep  -e haserl-ui -e dragino_gw_fwd -e lg02_pkt_fwd -e lora-gateway >> /tmp/main_packages.html
		echo "</pre>" >> /tmp/main_packages.html
	fi

	if [ -f /usr/share/opkg_update.log  ]; then
		ln -sf /usr/share/opkg_update.log  /tmp/opkg_update.log
	else
		echo null > /tmp/opkg_update.log
	fi

	boot_enable=$(uci get package.general.boot_enable)
	day_enable=$(uci get package.general.day_enable)
%>
	

<%# --- Process the form submission --- %>
<%
	if [ $FORM_BUTTON == "Install" ]; then
		if [ -n "$FORM_PACKAGE" ]; then
			installing="1"
			package=$FORM_PACKAGE
		fi
	fi

	if [ $FORM_BUTTON == "Reload" ]; then
		echo "<pre>" > /tmp/opkglist.html
		echo "<span class="impact-light">Package data is being loaded. Click on Refresh to display data when loaded. \
		<br><br>This may take several minutes.</span>" >> /tmp/opkglist.html
		echo "</pre>" >> /tmp/opkglist.html		
		
		# Download package list in the background
		( (opkg update > /tmp/opkgupdate.txt); \
		echo "<pre>" > /tmp/opkglist.html; \
		(opkg list-upgradable | sed 's/ - /\t/g' | cut -c 1-130 >> /tmp/opkglist.html); \
		echo "</pre>" >> /tmp/opkglist.html; ) &
	fi

	if [ $FORM_BUTTON == "SAVE" ]; then
		if [ $FORM_DAY_ENABLE = "checked" ];then
			uci set package.general.day_enable=checked
			sed -i 's/\#0 2 \* \* \*  \/etc\/init.d\/opkg-update start/0 2 \* \* \*  \/etc\/init.d\/opkg-update start/g' /etc/crontabs/root 
			/etc/init.d/cron restart
		else
			uci set package.general.day_enable=0
			line=$(cat /etc/crontabs/root| grep opkg-update -n|awk -F":" '{print $1}')
			sed -i ''$line's/.*/\#0 2 \* \* \*  \/etc\/init.d\/opkg-update start/g' /etc/crontabs/root 
			/etc/init.d/cron restart
		fi
		
		if [ $FORM_BOOT_ENABLE = "checked" ];then
			uci set package.general.boot_enable=checked
			/etc/init.d/opkg-update enable
		else
			uci set package.general.boot_enable=0
			/etc/init.d/opkg-update disable
		fi
		uci commit package
		%>
		<html>
			<script>
				window.location.href = "/cgi-bin/system-package.has"; /* Reload page */
			</script>
		</html>
		<%
	fi
	
	# Process core package upgrades
	CORE_PKG="lg02_pkt_fwd lora-gateway haserl-ui dragino_gw_fwd"
	for PKG in $CORE_PKG;do
		if [ $FORM_BUTTON == "Upgrade_$PKG" ]; then
			upgrading="1"
			package=$PKG
		fi
	done
	
%>

<%# --- Present the HTML page --- %>
<!DOCTYPE html>
<html lang="en">
<head>
<%inc /www/cgi-bin/inc/head.inc %>
</head>

<body>
<%inc /www/cgi-bin/inc/menu.inc %>

<div class="page-container">
<h2>Package Management</h2>

<form name="SYSTEM_STATUS" id="update-log" action="<% echo -n $SCRIPT_NAME %>" method=POST enctype="multipart/form-data" >

	<table class="configTable">
		<tr> <td><h3> Package List </h3></td></tr>
		<tr>
			<td><label id="loading"><span class="impact-light">Downloading package information. Please wait...</span></label></td>
		</tr>
		<tr>
			<td><iframe id="listframe" width="1140px" scrolling="auto" src="/tmp/opkglist.html" ></iframe></td>
		</tr>
		<tr class="rowSpacer"></tr>

		<tr>
			<td><INPUT TYPE="SUBMIT" name="BUTTON" VALUE="Refresh" onclick="showPageLoaderIcon()">
				<INPUT TYPE="SUBMIT" name="BUTTON" VALUE="Reload" onclick="showPageLoaderIcon()">
				<text> Click Reload to download package list. This will take a while.</text>
			</td>
		</tr>
	</table>
	
	<script>	document.getElementById("loading").style.display = "none"; 	</script>
	 


	<table class="configTable">
		<tr> <td colspan="10"><h3> Installed Package List </h3></td></tr>
		<tr>
			<td colspan="10"><iframe id="installed-listframe" width="1140px" scrolling="auto" src="/tmp/opkglist-installed.html" ></iframe></td>
		</tr>
		<tr class="rowSpacer"></tr>

		<tr> <td colspan="10"><h3> Install Package </h3></td></tr>
	
<% 	if [ $installing == "1" ]; then %>
		<tr><td colspan="10"><p class="impact-light" id="installing">Installing package. Please wait...</p></td></tr>
<% fi %>
		<tr>
			<td colspan="2"><label for="PACKAGE">Package Name:</label></td>
			<td colspan="5"> <input type="text" size="30" name="PACKAGE"></td>
			<td colspan="1"><INPUT TYPE="SUBMIT" name="BUTTON" VALUE="Install" onclick="showPageLoaderIcon()"></td>
		</tr>
	</table>

	<table class="configTable">
		<tr> <td colspan="10"><h3> Core Packages  </h3></td></tr>

<% 	if [ $upgrading == "1" ]; then %>
		<tr><td colspan="10"><p class="impact-light" id="upgrading">Upgrading package. Please wait...</p></td></tr>
<% fi %>
		<tr style="font-weight: bold">
			<td colspan="3">PACKAGE</td>
			<td colspan="2">Cur Version</td>
			<td colspan="2">Remote version</td>
			<td colspan="2">Action</td>
		</tr>			
		
		<% for PKG in $CORE_PKG; do %>

		<tr><td colspan="3"><% echo $PKG %>:</td>
			<td colspan="2" ><% echo $(cat /tmp/main_packages.html | grep ^$PKG | awk '{print $3}') %></td>
			<td colspan="2"><% echo $(cat /tmp/main_packages.html | grep ^$PKG | awk '{print $3}') %></td>
			<td colspan="2"><INPUT TYPE="SUBMIT" name="BUTTON" VALUE="Upgrade_<% echo -n $PKG %>"</td>
		</tr>

		<% done %> 

		<tr class="rowSpacer"></tr>
		<tr> <td colspan="10"><h4> Installation Progress  </h4></td></tr>
		<tr>
			<td colspan="10"><iframe id="install-infoframe" width="1140px" scrolling="auto" src="/tmp/install-info.html" ></iframe></td>
		</tr>
	</table>

<%
	if [ $installing == "1" ]; then 
		installing="0"
   	echo "<pre>" > /tmp/install-info.html
		opkg install $FORM_PACKAGE > /tmp/install-info.html
		echo "</pre>" >> /tmp/install-info.html
		# Update the installed list
		echo "<pre>" > /tmp/opkglist-installed.html
		opkg list_installed >> /tmp/opkglist-installed.html
		echo "</pre>" >> /tmp/opkglist-installed.html
	fi
%>    
<script>	document.getElementById("installing").style.display = "none"; 	</script>

<%
	if [ $upgrading == "1" ]; then 
		upgrading="0"
  	 	echo "<pre>" > /tmp/install-info.html
		echo "Upgrading $package <br>" >> /tmp/install-info.html
		opkg upgrade $package -V >> /tmp/install-info.html
		echo "</pre>" >> /tmp/install-info.html
		rm /tmp/opkglist-installed.html
	fi
%>
<script>	document.getElementById("upgrading").style.display = "none"; 	</script>
<script> document.getElementById("install-infoframe").src = "/tmp/install-info.html"; </script>

	<table class="configTable">
	<tr> <td colspan="10"><h3>Auto-Update </h3></td></tr>
	<tr>
		<td colspan="1"></td>
		<td colspan="3"><label>Enable update every boot</lable></td>
		<td colspan="5"><input type="checkbox" name="BOOT_ENABLE" value="checked" <% echo -n $boot_enable %> ></td>
	</tr>
	<tr>
		<td colspan="1"></td>
		<td colspan="3"><label>Enable update every day midnight</lable></td>
		<td colspan="1"><input type="checkbox" name="DAY_ENABLE" value="checked" <% echo -n $day_enable %> ></td>
		<td colspan="4"><INPUT TYPE="SUBMIT" name="BUTTON" VALUE="SAVE"  onclick="showPageLoaderIcon()"></td>
	</tr>
	<tr class="rowSpacer"></tr>
	<tr>
		<td colspan="10"><iframe id="installed-listframe" width="1140px" scrolling="auto" src="/tmp/opkg_update.log" ></iframe></td>
	</tr>
	<tr class="rowSpacer"></tr>
</table>
</form>
</div>
</body>
</html>


